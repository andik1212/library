<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.andik1212">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-sdk android:minSdkVersion="8"
            android:targetSdkVersion="17"/>
    <application android:icon="@drawable/droid" android:label="@string/app_name" android:name=".App">
        <activity android:name="StartActivity"
                  android:launchMode="singleTop"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".services.InternetCheckService" />
        <activity android:name="ActivityDetail">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="appfortwitter" android:host="callback" />
            </intent-filter>
                </activity>
        <activity android:name="com.facebook.LoginActivity"/>

        <activity android:name="com.example.andik1212.share.twitter.PrepareRequestTokenActivity" android:launchMode="singleTask">>
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="xchaplintwitter" android:host="callback" />
        </intent-filter>
        </activity>

        <receiver
                android:name="com.example.andik1212.fragments.FragmentList$BroadcastListener">
            <intent-filter>
                <action android:name="com.example.andik1212.DOWN" />
            </intent-filter>
        </receiver>
        <receiver
                android:name="com.example.andik1212.fragments.FragmentList$BroadcastListenerOn">
            <intent-filter>
                <action android:name="com.example.andik1212.UP" />
            </intent-filter>
        </receiver>
        <receiver
                android:name="com.example.andik1212.StartActivity$BroadcastListenerUpdateAndCheck">
            <intent-filter>
                <action android:name="com.example.andik1212.UPDATE" />
            </intent-filter>
        </receiver>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id" />
    </application>
</manifest>
